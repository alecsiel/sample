# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET		/list						controllers.BoardApp.list(page: Integer ?= 1)

GET		/view/:id					controllers.BoardApp.view(id:Long)

POST	/saveComment/:articleId				controllers.BoardApp.saveComment(articleId: Long)
GET     /deleteComment/:articleId/:commentId           controllers.BoardApp.deleteComment(articleId:Long, commentId:Long)


GET		/write			controllers.BoardApp.writeArticleForm()
GET		/edit/:id		controllers.BoardApp.editArticleForm(id: Long)

POST		/save			controllers.BoardApp.save()