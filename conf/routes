# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET		/init						controllers.BoardApp.init()
GET		/list						controllers.BoardApp.list()

GET		/view/:id					controllers.BoardApp.view(id:Long)

GET		/initComment				controllers.BoardApp.initComment()

POST	/saveComment/:articleId				controllers.BoardApp.saveComment(articleId: Long)
GET     /deleteComment/:articleId/:commentId           controllers.BoardApp.deleteComment(articleId:Long, commentId:Long)